//= require avgrund

@import "../mixins/dashboard"

body
    position absolute
    background #FAF9F7
    for dir in top left right bottom
        {dir} 0

.rfloat
    float right

#dashboard > header
    position absolute
    for dir in top left right
        {dir} 0
    height 40px

#dashboard > footer
    position absolute
    for dir in bottom left right
        {dir} 0
    height 30px

#main, #sidebar
    position absolute
    top 0
    bottom 0
    border 1px solid #ECEBEA
    padding 10px
    border-top 4px solid #FFDF0D

#main
    left 0
    right 300px
    overflow auto

#main > header
    border-bottom 1px solid #E3E3E2
    h1
        font-weight 100
#search-box
    background white
    border 1px solid #E3E3E2
    line-height 1.5em
    font-size 1em
    border-radius 0.8em
    for dir in left right
        padding-{dir} 1em
    outline 0

#main > .body
    border-top 2px solid white

#sidebar
    position absolute
    right 0
    width 280px
    background #F0EFED

#user-info
    background #FAFAFA
    padding 10px
    h2
        font-size 1.3em
        font-weight 100

#tracks
    position relative
    list-style-type none

.track
    background white
    border 1px solid #E6E6E6
    display block

#new-track
    background transparent
    border 2px dashed #C9C9C9
    &:hover
        border-color #EC6D54
    a
        text-align center
        padding 50px 20px
        font-weight bold
        display block
        color #C9C9C9
    a:hover
        color #EC6D54

.track > header
    h1
        margin 0
        padding 5px 10px
        border-bottom #F5F5F5 1px solid
        a
            color #CF0018
            font-size 0.6em
            font-weight 100

.track > .body
    padding 10px

.track .achievement-summary
    background #FAFAFA
    padding 10px
    font-size 0.8em
    text-align center
    .nums
        font-size 2.6em
        font-size 100

.milestones
    background white
