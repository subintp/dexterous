//= require avgrund

@import "../mixins/dashboard"

body
    position absolute
    background #FAF9F7
    for dir in top left right bottom
        {dir} 0

.rfloat
    float right
.tcenter
    text-align center
.lfloat
    float left
.no-mp
    margin 0
    padding 0

#dashboard > header
    position absolute
    for dir in top left right
        {dir} 0
    height 40px

#dashboard > footer
    position absolute
    for dir in bottom left right
        {dir} 0
    height 30px

#main, #sidebar
    position absolute
    top 0
    bottom 0
    border 1px solid #ECEBEA
    padding 10px
    border-top 4px solid #FFDF0D

#main
    left 0
    right 300px
    overflow auto

#main > header
    border-bottom 1px solid #E3E3E2
    h1
        font-weight 100
#search-box
    background white
    border 1px solid #E3E3E2
    line-height 1.5em
    font-size 1em
    border-radius 0.8em
    for dir in left right
        padding-{dir} 1em
    outline 0

#main > .body
    border-top 2px solid white

#sidebar
    position absolute
    right 0
    width 280px
    background #F0EFED

#user-info
    background #FAFAFA
    padding 10px
    h2
        font-size 1.3em
        font-weight 100

#tracks
    position relative
    list-style-type none

.track
    background white
    border 1px solid #E6E6E6
    display block

#new-track
    background transparent
    border 2px dashed #C9C9C9
    &:hover
        border-color #EC6D54
    a
        text-align center
        padding 50px 20px
        font-weight bold
        display block
        color #C9C9C9
    a:hover
        color #EC6D54

.track > header
    h1
        margin 0
        padding 5px 10px
        border-bottom #F5F5F5 1px solid
        a
            color #CF0018
            font-size 0.6em
            font-weight 100

.track > .body
    padding 10px

.track .achievement-summary
    background #FAFAFA
    padding 10px
    font-size 0.8em
    text-align center
    &:hover
        background #AAD400
        cursor pointer
        color white
    .num-thumb
        font-size 3.6em
        font-size 100
        display block
.track .milestones
    display none
.upcoming-summary
    padding 10px
    p
      margin 0
    .zilch
      text-align center
      color #D3D3D3
.avgrund-popin
    border-top 2px solid #FFDF0D
.milestones
    h2
        border-bottom 2px solid #FAFAFA
        margin 0
        padding 5px 0
        font-size 1em
        font-weight 400
        color #CF0018
        position absolute
        top 0
        left 0
        right 0
    ul
        list-style-type none
        padding 0
        margin 0
        position absolute
        top 30px
        bottom 55px
        left 0
        right 0
        padding 10px
        li
            border-bottom 1px dashed #FAFAFA
            display block
            padding 5px
    .explore-wrapper
        border-top 1px solid #FAFAFA
        position absolute
        bottom 0
        left 0
        right 0
        padding 10px
        a
            border-radius 17px
            background #AAD400
            color white
